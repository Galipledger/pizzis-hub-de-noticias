<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guiaTruco.titulo %></title>
    <link rel="stylesheet" href="/public/css/detalleGuiaTruco.css">
    <link rel="stylesheet" href="/public/css/detalletrucos.css">
</head>
<body>
    
        <!-- T铆tulo de la gu铆a/truco -->
        <h1 class="titulo-noticia"><%= guiaTruco.titulo %></h1>
        <p class="autor">Autor: <strong><%= guiaTruco.autor %></strong></p>
        <!-- Imagen de miniatura -->
        <img class="miniatura" src="/uploads/<%= guiaTruco.miniatura %>" alt="Miniatura de la gu铆a o truco">
    
        <!-- Contenido de la gu铆a/truco -->
        <p class="content"><%= guiaTruco.contenido %></p>
    
        <!-- Video de la gu铆a/truco si existe -->
        <% if (guiaTruco.video) { %>
            <video class="video-noticia" controls>
                <source src="/uploads/<%= guiaTruco.video %>" type="video/mp4">
                Tu navegador no soporta el video.
            </video>
        <% } %>
    
        <!-- Fecha de publicaci贸n -->
        <small>Publicado el <%= guiaTruco.fecha_publicacion %></small>
        <h3>Reacciones</h3>
        <div class="interacciones">
            <form action="/guias-trucos/<%= guiaTruco.id %>/corazon" method="POST">
                <button type="submit" class="like-button">わ <span><%= guiaTruco.likes %></span></button>
            </form>
            <form action="/guias-trucos/<%= guiaTruco.id %>/dislike" method="POST">
                <button type="submit" class="dislike-button"> <span><%= guiaTruco.dislikes %></span></button>
            </form>
            <form action="/guias-trucos/<%= guiaTruco.id %>/enojo" method="POST">
                <button type="submit" class="angry-button"> <span><%= guiaTruco.angry %></span></button>
            </form>
            <form action="/guias-trucos/<%= guiaTruco.id %>/sorpresa" method="POST">
                <button type="submit" class="surprise-button"> <span><%= guiaTruco.surprise %></span></button>
            </form>
            <button class="share-button" onclick="compartir()"> Compartir</button>
        </div>
   
   
    <div class="comentarios">
        <h3>Comentarios</h3>
        <ul>
            <% if (comentarios.length === 0) { %>
                <li>A煤n no hay comentarios disponibles</li>
            <% } else { %>
                <% comentarios.forEach(comentario => { %>
                    <li>
                        <strong><%= comentario.autor %></strong>: <%= comentario.contenido %>
                        <br>
                        <small><%= comentario.fecha_comentario %></small>
                        <% if (comentario.id_usuario === idUsuario) { %>
                            <!-- Bot贸n para mostrar el formulario de edici贸n -->
                            <button class="edit-button" onclick="document.getElementById('form-editar-<%= comentario.id %>').style.display = 'block'">Editar</button>
                            <!-- Formulario de edici贸n, oculto por defecto -->
                            <form id="form-editar-<%= comentario.id %>" action="/guias-trucos/<%= guiaTruco.id %>/comentarios/<%= comentario.id %>/editar" method="POST" style="display:none;">
                                <textarea name="contenido"><%= comentario.contenido %></textarea>
                                <button type="submit">Guardar</button>
                            </form>
                            <!-- Formulario para eliminar comentario -->
                            <form action="/guias-trucos/<%= guiaTruco.id %>/comentarios/<%= comentario.id %>/borrar" method="POST" style="display: inline;">
                                <button type="submit">Eliminar</button>
                            </form>
                        <% } %>
                    </li>
                <% }) %>
            <% } %>
        </ul>
        <!-- Formulario para agregar un comentario -->
        <% if (idUsuario) { %>
            <h3>Agrega un comentario</h3>
            <form action="/guias-trucos/<%= guiaTruco.id %>/comentarios" method="POST">
                <textarea name="contenido" required></textarea>
                <button type="submit">Enviar</button>
            </form>
        <% } else { %>
            <p class="sesion">Inicia sesi贸n para comentar</p>
        <% } %>
    </div>
        <script>
            function compartir() {
                const url = window.location.href;
                navigator.clipboard.writeText(url).then(() => {
                    alert('Enlace copiado al portapapeles');
                });
            }
        </script>
        
    
</body>
</html>
