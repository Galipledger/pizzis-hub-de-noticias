    <h1>√öltimas Noticias</h1>

   
    <div class="contenedor-buscador-filtro">
        <form class="formulario" action="/noticias/buscar" method="GET">
            <input type="text" name="query" placeholder="Buscar noticias" value="<%= query || '' %>">
            <button class="buscar" type="submit"> <i class="fas fa-search"></i></button>
        </form>
        
        <form class="filtro" action="/noticias" method="GET">
            <label for="order">Ordenar por:</label>
            <select name="order" id="order">
                <option value="desc">M√°s recientes</option>
                <option value="asc">M√°s antiguas</option>
            </select>
            <label for="filtro">Filtrar por:</label>
            <select name="filtro" id="filtro">
                <option value="">Ninguno</option>
                <option value="likes">M√°s likes</option>
            </select>
            <button type="submit">Aplicar</button>
        </form>
        
        
        
       
            <% if (es_admin) { %>
                <a href="/noticias/crear" class="crear-noticia"><img src="/public/imagenes/361984.png" alt=""></a>
            <% } %>
        
    </div>
    
    
  

    <div class="noticias-grid">
        <% if (noticias.length > 0) { %>
            <% noticias.forEach(noticia => { %>
             
                <div class="noticia-cuadro">
                    <img src="/uploads/<%= noticia.miniatura %>" alt="Miniatura de la noticia">
                    
                  
                    <div class="noticia-info">
                        <h2><%= noticia.titulo %></h2>
                        <p><%= noticia.contenido.substring(0, 100) %>...</p>
                        <a href="/noticias/<%= noticia.id %>">Leer m√°s</a>
                        <div class="likes-dislikes">  
                            <p class="likes">  
                                <i class="fas fa-thumbs-up"></i>  
                                <span><%= noticia.likes %></span>  
                            </p>  
                            <p class="dislikes">  
                                <i class="fas fa-thumbs-down"></i>  
                                <span><%= noticia.dislikes %></span>  
                            </p>  
                    </div>
                    </div>
                    
                           
                   
                    <% if (es_admin) { %>
                        <div class="acciones-admin">
                            <a href="/noticias/<%= noticia.id %>/editar" class="editar">‚úé Actualizar</a>
                            <form class="botoneliminar" action="/noticias/<%= noticia.id %>/eliminar" method="POST" onsubmit="return confirm('¬øEst√°s seguro de que deseas eliminar esta noticia?');">
                                <button type="submit" class="btn-eliminar">üóëÔ∏è Eliminar</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% }); %>
        <% } else { %>
            <p>No se encontraron noticias</p>
        <% } %>
    </div>
  
    <div class="paginador">  
        <% if (currentPage > 1) { %>  
            <a href="?page=<%= currentPage - 1 %>&query=<%= query %>"><</a>  
        <% } %>  
        <% for (let i = 1; i <= totalPages; i++) { %>  
            <a href="?page=<%= i %>&query=<%= query %>"  
               <%= currentPage === i ? 'style="font-weight:bold;"' : '' %>  
            ><%= i %></a>  
        <% } %>  
        <% if (currentPage < totalPages) { %>  
            <a href="?page=<%= currentPage + 1 %>&query=<%= query %>">></a>  
        <% } %>  
    </div>
    

